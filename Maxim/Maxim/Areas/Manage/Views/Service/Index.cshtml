@using Maxim.Models

@model List<CustomService>

    @{
        int count = 0;
    }

<div class="row">
    <div class="d-flex justify-content-between">
        <a class="btn btn-success" asp-controller="Service" asp-action="Create">Create</a>
        <a class="btn btn-secondary" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
    </div>
    <table class="table table-dark table-striped">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Image</th>
                <th scope="col">Title</th>
                <th scope="col">Description</th>
                <th scope="col">Is Deleted</th>
                <th scope="col">Settings</th>
            </tr>
        </thead>
        <tbody>
            
            @foreach (CustomService service in Model)
            {
                count++;
                <tr>
                    <td scope="row">@count</td>
                    <td>
                        <img src="~/Uploads/ServicesImages/@service.ImageUrl">
                    </td>
                    <td>@service.Title</td>
                    <td>@service.Description.Substring(0,25) ...</td>
                    <td>
                        <p>@(@service.IsDeleted == false ? "Not Deleted" : "Deleted")</p>
                    <td>
                    <td>
                        <a class="btn btn-primary" asp-controller="Service" asp-action="Update" asp-route-id="@service.Id">Update</a>
                        <a class="btn btn-danger" asp-controller="Service" asp-action="Delete" asp-route-id="@service.Id">Delete</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>


</div>

<div>
    <nav aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
</div>