@using Maxim.Areas.Manage.ViewModels.Account

@{
    Layout = null;
}

@model RegisterVM

<!DOCTYPE html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Majestic Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/manage/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/manage/assets/vendors/base/vendor.bundle.base.css">
    <!-- endinject -->
    <!-- plugin css for this page -->
    <!-- End plugin css for this page -->
    <!-- inject:css -->
    <link rel="stylesheet" href="~/manage/assets/css/style.css">
    <!-- endinject -->
    <link rel="shortcut icon" href="~/manage/assets/images/favicon.png" />
</head>

<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="content-wrapper d-flex align-items-center auth px-0">
                <div class="row w-100 mx-0">
                    <div class="col-lg-4 mx-auto">
                        <div class="auth-form-light text-left py-5 px-4 px-sm-5">
                            <div class="brand-logo">
                                <img src="~/manage/assets/images/logo.svg" alt="logo">
                            </div>
                            <h4>New here?</h4>
                            <h6 class="font-weight-light">Signing up is easy. It only takes a few steps</h6>
                            <form class="pt-3" method="post">
                                <div class="row">
                                    <div class="form-group col-6">
                                        <input asp-for="Name" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Name">
                                        <span asp-validation-for="Name" style="color:red"></span>
                                    </div>
                                    <div class="form-group col-6">
                                        <input asp-for="Surname" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Surname">
                                        <span asp-validation-for="Surname" style="color:red"></span>

                                    </div>
                                </div>

                                <div class="form-group">
                                    <input asp-for="Username" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">
                                    <span asp-validation-for="Username" style="color:red"></span>

                                </div>

                                <div class="form-group">
                                    <input asp-for="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                                    <span asp-validation-for="Email" style="color:red"></span>

                                </div>
                               
                                <div class="form-group">
                                    <input asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                                    <span asp-validation-for="Password" style="color:red"></span>

                                </div>
                                
                                <div class="form-group">
                                    <input asp-for="ComfirmPassword" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="ComfirmPassword">
                                    <span asp-validation-for="ComfirmPassword" style="color:red"></span>

                                </div>

                                <div class="mt-3">
                                    <button class="btn btn-primary btn-lg font-weight-medium auth-form-btn">SIGN UP</button>
                                </div>
                                <div class="text-center mt-4 font-weight-light">
                                    Already have an account? <a asp-area="Manage" asp-controller="Account" asp-action="Login" class="text-primary">Login</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <!-- content-wrapper ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->
    <!-- plugins:js -->
    <script src="~/manage/assets/vendors/base/vendor.bundle.base.js"></script>
    <!-- endinject -->
    <!-- inject:js -->
    <script src="~/manage/assets/js/off-canvas.js"></script>
    <script src="~/manage/assets/js/hoverable-collapse.js"></script>
    <script src="~/manage/assets/js/template.js"></script>
    <!-- endinject -->
</body>

</html>
